{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/"]
}